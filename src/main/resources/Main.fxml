<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="machalica.marcin.timetracker.main.MainController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#saveData" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#loadData" text="Load" />
                  <Menu mnemonicParsing="false" text="Save/Load method">
                     <items>
                        <RadioMenuItem fx:id="dataPersistenceOptionTextFile" mnemonicParsing="false" text="Text File">
                           <toggleGroup>
                              <ToggleGroup fx:id="dataPersistenceOption" />
                           </toggleGroup>
                        </RadioMenuItem>
                        <RadioMenuItem fx:id="dataPersistenceOptionSerialization" mnemonicParsing="false" text="Serialization" toggleGroup="$dataPersistenceOption" />
                        <RadioMenuItem fx:id="dataPersistenceOptionDatabase" mnemonicParsing="false" text="Database" toggleGroup="$dataPersistenceOption" />
                     </items>
                  </Menu>
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#showAbout" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="activityTable" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Date" />
          <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time" />
            <TableColumn fx:id="infoColumn" prefWidth="75.0" text="Info" />
            <TableColumn fx:id="actionButtonsColumn" prefWidth="75.0" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox spacing="5.0">
         <children>
            <DatePicker fx:id="dateInput" promptText="Date" />
            <TextField fx:id="timeInput" promptText="Time" />
            <TextField fx:id="infoInput" promptText="Info" />
            <Button fx:id="addActivityButton" minWidth="60.0" mnemonicParsing="false" text="Add">
               <cursor>
                  <Cursor fx:constant="CLOSED_HAND" />
               </cursor>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="warningLabel" textFill="#cc3300">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
